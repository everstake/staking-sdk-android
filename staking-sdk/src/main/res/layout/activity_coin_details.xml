<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/coinDetailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/everstakeDetailsHeaderBg"
        app:menu="@menu/coin_details"
        app:navigationIcon="@drawable/ic_back_white"
        app:title="" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/everstakeDetailsHeaderBg"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/coinDetailsCoinImage"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:contentDescription="@string/coin_details_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_info_white" />

        <TextView
            android:id="@+id/coinDetailsCoinTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/everstakeTextColorPrimaryInverted"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coinDetailsCoinImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Tezos (XTZ)" />

        <TextView
            android:id="@+id/coinDetailsAPR"
            style="@style/EverstakeTheme.SecondaryInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/everstakeTextColorSecondaryInverted"
            app:layout_constraintStart_toStartOf="@+id/coinDetailsCoinTitle"
            app:layout_constraintTop_toBottomOf="@+id/coinDetailsCoinTitle"
            tools:text="APR: 10%" />

        <TextView
            android:id="@+id/coinDetailsServiceFee"
            style="@style/EverstakeTheme.SecondaryInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:textColor="@color/everstakeTextColorSecondaryInverted"
            app:layout_constraintStart_toEndOf="@+id/coinDetailsAPR"
            app:layout_constraintTop_toTopOf="@+id/coinDetailsAPR"
            tools:text="Service fee: 1-3%" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/coinDetailsHeaderBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="coinDetailsCoinImage,coinDetailsAPR,coinDetailsServiceFee" />

        <Button
            android:id="@+id/coinDetailsStakeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp"
            android:text="@string/coin_details_stake"
            app:layout_constraintEnd_toStartOf="@+id/coinDetailsCalculatorButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coinDetailsHeaderBarrier" />

        <Button
            android:id="@+id/coinDetailsCalculatorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/coin_details_calculator"
            android:textColor="@color/everstakeTextColorPrimaryInverted"
            app:backgroundTint="#26FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coinDetailsStakeButton"
            app:layout_constraintTop_toTopOf="@+id/coinDetailsStakeButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/coinDetailsGuidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/coinDetailsGuidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <TextView
                android:id="@+id/coinDetailsStakeHeader"
                style="@style/EverstakeTheme.HeaderInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/coin_details_staked"
                app:layout_constraintEnd_toEndOf="@+id/coinDetailsGuidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/coinDetailsGuidelineStart"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/stakeHeaderDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@color/everstakeDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coinDetailsStakeHeader" />

            <LinearLayout
                android:id="@+id/coinDetailsStakedContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stakeHeaderDivider" />

            <TextView
                android:id="@+id/coinDetailsAvailableClaim"
                style="@style/EverstakeTheme.SecondaryInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="@id/coinDetailsGuidelineEnd"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/coinDetailsGuidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/coinDetailsStakedContainer"
                tools:text="Available rewards: 0.024 XTZ" />

            <Button
                android:id="@+id/coinDetailsStakeClaimButton"
                style="@style/EverstakeTheme.PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:text="@string/coin_details_claim"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/coinDetailsGuidelineEnd"
                app:layout_constraintStart_toStartOf="@id/coinDetailsGuidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/coinDetailsAvailableClaim" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/coinDetailsClaimGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="coinDetailsStakeClaimButton,coinDetailsAvailableClaim,claimDivider" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/coinDetailsStakedGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="coinDetailsStakeHeader,stakeHeaderDivider,coinDetailsStakedContainer" />

            <View
                android:id="@+id/claimDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/everstakeDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coinDetailsStakeClaimButton" />

            <TextView
                android:id="@+id/coinDetailsAboutLabel"
                style="@style/EverstakeTheme.HeaderInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/coin_details_about"
                app:layout_constraintEnd_toEndOf="@id/coinDetailsGuidelineEnd"
                app:layout_constraintStart_toStartOf="@id/coinDetailsGuidelineStart"
                app:layout_constraintTop_toBottomOf="@id/claimDivider" />

            <TextView
                android:id="@+id/coinDetailsAboutText"
                style="@style/EverstakeTheme.PrimaryInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/everstakeTextColorPrimary"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/coinDetailsGuidelineEnd"
                app:layout_constraintStart_toStartOf="@id/coinDetailsGuidelineStart"
                app:layout_constraintTop_toBottomOf="@id/coinDetailsAboutLabel"
                tools:text="This is text about some coin bla bla" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>